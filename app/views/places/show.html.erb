<h1>
  <%= render 'name_with_rating' %>
  <%= render 'rating' %>
</h1>



<ul>
  <li id="address"><%= @place.address %></li>
  <li><%= @place.description %></li>
</ul>

<% if signed_in? %>
  <% if @place.user_id == current_user.id %>
    <%= button_to "Delete", place_path(@place), :method => "delete" %>
  <% end %>
<% end %>

<%= render :partial => "comments/comments.html.erb", :locals => { :place => @place } %>